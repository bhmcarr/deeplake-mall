// room script file


function room_Load()
{
  aOpeningEnding.Play();
  gMaingui.Visible = false;
  gAction.Visible = false;
}

function room_AfterFadeIn()
{
  Wait(500);
  oTitleCard.SetView(40);
  oTitleCard.Animate(0, 2, eOnce, eBlock);
  Wait(150);
  gMaingui.Visible = true;
  gAction.Visible = true;
  player.ChangeRoom(1);
}
